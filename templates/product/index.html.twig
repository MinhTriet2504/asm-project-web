{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Name Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Information</th>
                <th>Brand</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <a href="{{ path('product_create') }}"class='btn btn-default'>Add product</a> 
            {% for product in products %}
                <tr>
                    <th scope="row">{{ product.id }}</th>
                    <td>{{ product.Name }}</td>
                    <td>{{ product.Quantity }}</td>
                    <td>{{ product.Price }}</td>
                    <td>{{ product.Information }}</td>
                    <td>{{ product.Brand }}</td>

                    

                    
                    <td>
                     
                        <a href="{{ path('product_details', {'id': product.id}) }} " class='btn btn-success'>View</a>                      
                        <a href="{{ path('product_edit', {'id': product.id}) }}" class='btn btn-default'>Edit</a> 
                        <a href="{{ path('product_delete', {'id': product.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
